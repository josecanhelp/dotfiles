    \ 'javascript': ['prettier'],
    \ 'html': ['prettier'],
    \ }


  function! s:fix_php()
    if filereadable('.php_cs.dist')
      let b:ale_fix_on_save = 1
    endif
  endfunction

  function! s:fix_javascript()
    let b:ale_fix_on_save = 1
  endfunction
